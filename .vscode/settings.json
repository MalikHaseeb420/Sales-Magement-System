{
  // If not specified searches for 'rubocop' executable available on PATH (default and recommended)
  // /Users/<your username>/.rbenv/shims/rubocop
  // "ruby.rubocop.executePath": "../.rubocop.yml",
  "ruby.rubocop.executePath": "/usr/share/rvm/gems/ruby-2.7.2/bin/rubocop",
  // You can use specific path
  // "ruby.rubocop.executePath": "/Users/you/.rbenv/shims/"
  // "ruby.rubocop.executePath": "/Users/you/.rvm/gems/ruby-2.3.2/bin/"
  // "ruby.rubocop.executePath": "D:/bin/Ruby22-x64/bin/"

  // If not specified, it assumes a null value by default.
  "ruby.rubocop.configFilePath": ".rubocop.yml",
  // default true
  "ruby.rubocop.onSave": true,
  "ruby.format": "rubocop",
  "ruby.lint": {
    "reek": true,
    "rubocop": true
  },
  "editor.codeActionsOnSave": {
    "ruby.rubocopAutocorrect": true
  },
  // Recommended when using Solargraph
  "ruby.intellisense": false,
  "[ruby]": {
    "editor.formatOnSave": true
  },
  "solargraph.completion": true,
  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.symbols": true,
  "solargraph.definitions": true,
  "solargraph.references": true
}
