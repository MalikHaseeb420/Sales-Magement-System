<% if notice %>
  <div class="alert position-fixed top-1 end-0 alert-warning alert-dismissible fade show" role="alert">
    <strong><%= notice %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% elsif alert %>
  <div class="alert position-fixed top-1 end-0 alert-danger alert-dismissible fade show" role="alert">
    <strong><%= alert %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
