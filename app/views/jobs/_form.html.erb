<div class="col-lg-3 col-12 mx-auto">
  <%= form_with(model: job, local: true) do |form| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>
        <ul>
          <% job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group mb-2 ">
      <%= form.label :title,class:'form-label' %>
      <%= form.text_field :title,class:'form-control' %>
    </div>
    <div class="form-group mb-2 ">
      <%= form.label :poster,"Job Poster",class:'form-label' %>
      <%= form.file_field :poster,class:'form-control' %>
    </div>
    <div class="form-group mb-2 ">
      <%= form.label :tech_stack_id,'Company Name', class:'formorm-label' %>
      <%= form.select(:tech_stack_id, options_from_collection_for_select(TechStack.all, :id, :stack_name),{},{class:'form-select'}) %>
    </div>
    <div class="form-group mb-2 ">
      <%= form.label :description,class:'form-label' %>
      <%= form.text_area :description,class:'form-control' %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
